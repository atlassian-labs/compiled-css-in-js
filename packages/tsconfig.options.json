{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "module": "es6",
    "moduleResolution": "node",
    "composite": true,
    "target": "es5",
    "lib": ["dom", "es2016", "es2017.object"],
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types",
      "../../node_modules/@types",
      "../../../node_modules/@types",
      "./types",
      "../types",
      "../../types",
      "../../../types"
    ]
  },
  "exclude": ["**/**.test.tsx", "**/dist", "**/__perf__/**"]
}
